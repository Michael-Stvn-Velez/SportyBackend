{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDbSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "BackendSportDb"
  },
  "Jwt": {
    "Key": "YOUR_SECRET_JWT_KEY_HERE_MINIMUM_32_CHARACTERS", 
    "Issuer": "BackendSportAPI",
    "Audience": "BackendSportAPIUsers",
    "ExpiryInMinutes": 60
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://your-frontend-domain.com"
    ]
  }
}
